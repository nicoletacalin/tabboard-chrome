{
  "name": "Tabboard",          //45 char max
  "description": "Clear Space - Clear Mind",
  "version": "0.1.0",
  "manifest_version": 2,
  // "icons": {
  //   "16": "path",
  //   "32": "path",
  //   "48": "path",
  //   "128": "path"
  // },
  "permissions": [
    // https://stackoverflow.com/questions/16096482/what-does-http-https-and-all-urls-mean-in-the-context-of-ch
    "<all_urls>",
    "activeTab",
    "tabs",
    // context menus for right click page
    "contextMenus",
    // saves data locally or by acc
    "storage"
],
  "background": {
    "scripts": ["./js/background.js"]
  },
  "options_page": "./options.html",
  // "action": {
  "browser_action": {
    "default_popup": "popup.html"
  }

}
